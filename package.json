{
    "name": "stromjs",
    "version": "0.5.1",
    "description": "Dependency-free streams utils for Node.js",
    "keywords": [
        "promise",
        "stream",
        "utils"
    ],
    "contributors": [
        {
            "name": "Sami Turcotte",
            "url": "https://github.com/Wenzil"
        },
        {
           "name": "Jerry Kurian",
           "email": "jerrykurian@protonmail.com",
           "url": "https://github.com/jkurian"
        },
        {
            "name": "Lewis Diamond",
            "email": "stromjs@lewisdiamond.com",
            "url": "https://github.com/lewisdiamond"
        }
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": {
        "url": "https://github.com/lewisdiamond/stromjs",
        "type": "git"
    },
    "scripts": {
        "test": "ava",
        "lint": "tslint -p tsconfig.json",
        "validate:tslint": "tslint-config-prettier-check ./tslint.json",
        "prepublishOnly": "yarn lint && yarn test && yarn tsc -d",
        "prepare": "tsc"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/node": "^12.12.15",
        "@types/sinon": "^7.0.13",
        "ava": "^2.4.0",
        "chai": "^4.2.0",
        "stromjs": "./",
        "prettier": "^1.14.3",
        "sinon": "^7.4.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.16.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.5.3"
    },
    "ava": {
        "files": [
            "tests/*.spec.ts",
            "tests/utils/*.spec.ts"
        ],
        "sources": [
            "src/**/*.ts"
        ],
        "compileEnhancements": false,
        "failWithoutAssertions": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register/transpile-only"
        ]
    }
}
